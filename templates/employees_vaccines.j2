{% extends 'main.html' %}

{% block head %}
<title>Employee-Vaccines | Covid-19 Vaccine Mandate Database</title>
{% endblock %}

{% block body %}
<h1 class="page-title">Employees-Vaccines</h1>
<form>
    <fieldset class="add-entity">
        <legend>Add Employee-Vaccine</legend>
        <label>Employee ID: </label>
        <select name="empid">
            {% for id in employee_options %}
            <option value="{{id}}">{{id}}</option>
            {% endfor %}
        </select>
        <br>
        <label>Vaccine ID: </label>
        <select name="vaccid">
            {% for id in vaccine_options %}
            <option value="{{id}}">{{id}}</option>
            {% endfor %}
        </select>
        <br>
        <label for="date">Date Administered: </label>
        <input type="date" id="date"/>
        <br>
        <label>Dose: </label>
        <input type="radio" id="1" name="dose" value="1">
        <label for="1">1st</label>
        <input type="radio" id="2" name="dose" value="2">
        <label for="2">2</label>
        <input type="radio" id="3" name="dose" value="3">
        <label for="3">Booster</label>
        <input type="radio" id="0" name="dose" value="0">
        <label for="0">Unknown</label>
        <br>
        <input type="submit" id="emp_vacc-submit">
    </fieldset>
</form>
<form id="search-form">
    <p>Search by Employee ID: </p>
    <select name="id">
        {% for id in employee_options %}
        <option value="{{id}}">{{id}}</option>
        {% endfor %}
    </select>
    <br>
    <input type="submit" value="Search" id="search-submit">
</form>
<table class="entity-table">
    <thead>
        <th>ID</th>
        <th>Employee ID</th>
        <th>Vaccine ID</th>
        <th>Date Administered</th>
        <th>Dose</th>
        <th></th>
    </thead>
    {% for entry in table_data %}
    <tr>
        <td>{{entry['employee_vaccine_id']}}</td>
        <td>{{entry['employee_id']}}</td>
        <td>{{entry['vaccine_id']}}</td>
        <td>{{entry['date_administered']}}</td>
        <td>{{entry['dose']}}</td>
        <td><button>Delete</button></td>
    </tr>
    {% endfor %}
</table>
{% endblock %}